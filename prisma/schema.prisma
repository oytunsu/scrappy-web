generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model City {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  slug      String     @unique
  createdAt DateTime   @default(now())
  districts District[]
}

model District {
  id         Int         @id @default(autoincrement())
  name       String
  slug       String
  cityId     Int
  createdAt  DateTime    @default(now())
  businesses Business[]
  city       City        @relation(fields: [cityId], references: [id])
  jobs       ScrapeJob[]

  @@unique([cityId, slug])
}

model Category {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  slug       String      @unique
  isActive   Boolean     @default(true)
  createdAt  DateTime    @default(now())
  businesses Business[]
  jobs       ScrapeJob[]
}

model Business {
  id                 BigInt   @id @default(autoincrement())
  businessId         String   @unique @db.VarChar(255)
  businessName       String   @db.VarChar(500)
  rating             Decimal? @db.Decimal(3, 2)
  reviewCount        Int?     @default(0)
  address            String?  @db.Text
  directionLink      String?  @db.Text
  priceInfo          String?  @db.VarChar(255)
  priceReportedCount Int?     @default(0)
  operatingHours     Json?
  phone              String?  @db.VarChar(50)
  imageUrl           String?  @db.Text
  website            String?  @db.Text
  categoryId         Int
  districtId         Int
  query              String?  @db.VarChar(500)
  timestamp          DateTime @default(now())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  reviews            Json?
  images             Json?
  menuItems          Json?
  category           Category @relation(fields: [categoryId], references: [id])
  district           District @relation(fields: [districtId], references: [id])

  @@index([categoryId])
  @@index([districtId])
  @@index([businessId])
}

model ScrapeJob {
  id         Int         @id @default(autoincrement())
  categoryId Int
  districtId Int
  status     JobStatus   @default(PENDING)
  lastRun    DateTime?
  totalFound Int         @default(0)
  createdAt  DateTime    @default(now())
  category   Category    @relation(fields: [categoryId], references: [id])
  district   District    @relation(fields: [districtId], references: [id])
  logs       ScrapeLog[]

  @@unique([categoryId, districtId])
  @@index([districtId], map: "ScrapeJob_districtId_fkey")
}

model ScrapeLog {
  id        BigInt    @id @default(autoincrement())
  jobId     Int
  level     LogLevel  @default(INFO)
  message   String    @db.Text
  createdAt DateTime  @default(now())
  job       ScrapeJob @relation(fields: [jobId], references: [id])

  @@index([jobId], map: "ScrapeLog_jobId_fkey")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Setting {
  key   String @id
  value String @db.Text
}

model ScrapeSession {
  id             Int       @id @default(autoincrement())
  startTime      DateTime  @default(now())
  endTime        DateTime?
  processedCount Int       @default(0)
  status         String    @default("RUNNING")
  createdAt      DateTime  @default(now())
}

enum JobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

enum LogLevel {
  INFO
  WARNING
  ERROR
}
